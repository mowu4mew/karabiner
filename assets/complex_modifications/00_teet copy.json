{
  "title":"00-1.test",
  "rules":[
    {
      "description": "00-1.test",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory":["control"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds":200
          },
          "to_if_held_down": [
            {
              "set_variable": {
              "name": "sub_modifiers",
              "value":1,
              "key_up_value":0
              },
              "halt":true
            }
          ],
          "to_after_key_up":[
            {
              "key_code":"v",
              "modifiers":"command"
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "p" },
          "to": [
            { "shell_command": "screencapture -P ~/Desktop/screenshot-`date +%Y%m%d-%H%M%S`.png" }
          ],
          "conditions": [
            { "type": "variable_if", "name": "sub_modifiers", "value": 1 }
          ]
        }
      ]
    }
  ]
}

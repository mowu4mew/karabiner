{
  "title":"11.scroll-delete",
  "rules":[
    {
      "description":"11/12. scroll-delete(Eisu + H/D/M/O to bs/delete/scroll down/scroll up)",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"h",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "left_shift",
                "left_option",
                "left_command"
              ]
            }
          },
          "to":[
            {
              "key_code":"delete_or_backspace"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"d",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "left_shift",
                "left_option",
                "left_command"
              ]
            }
          },
          "to":[
            {
              "key_code":"delete_or_backspace",
              "modifiers":"fn"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"m",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "left_shift",
                "left_option",
                "left_command"]
            }
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"fn"
           } 
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"o",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "left_shift",
                "left_option",
                "left_command"]
            }
          },
          "to":[
            {
              "key_code":"up_arrow",
              "modifiers":"fn"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"m",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":[
                "caps_lock",
                "left_shift",
                "left_option",
                "left_command"
              ]
            }
          },
          "to":[
            {
              "key_code":"down_arrow",
              "modifiers":"fn"
            }
          ]
        }
      ]
    }
  ]
}
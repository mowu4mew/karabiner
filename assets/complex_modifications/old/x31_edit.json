{
  "title":"31/34.edit",
  "rules":[
    {
      "description":"cut / copy / undo / redo / kill line /open line from Eisu & x / c / z / b / e / period",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"x",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"x",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"c",
            "modifiers":{
              "mandatory" :["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"c",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"z",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"z",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"b",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"z",
              "modifiers":[
                "command",
                "shift"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from": {
              "key_code": "e",
              "modifiers": {
                  "mandatory": [
                      "right_control"
                  ],
                  "optional": [
                      "caps_lock"
                  ]
              }
          },
          "to": [
              {
                  "key_code": "right_arrow",
                  "modifiers": [
                      "command",
                      "shift"
                  ]
              },
              {
                  "key_code": "delete_or_backspace",
                  "modifiers":"fn"
              }
          ]
        },
       {
          "type":"basic",
          "from": {
              "key_code": "period",
              "modifiers": {
                  "mandatory": [
                      "right_control"
                  ],
                  "optional": [
                      "caps_lock"
                  ]
              }
          },
          "to": [
              {
                  "key_code": "left_arrow",
                  "modifiers": [
                      "command"
                  ]
              },
              {
                  "key_code": "return_or_enter"
              },
              {
                  "key_code": "up_arrow"
              }
          ]
        }
      ]
    }
  ]
}
{
  "title":"04.symbol-shift",
  "rules":[
		{
			"description":"04/04.symbol shift (Kana + shift + Z/X/C/comma/period/slash to grave/double quote/{/}/pipe)",
			"manipulators":[
				{
					"type":"basic",
					"from": {
						"key_code": "z",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},
					"to":[
						{
							"key_code":"open_bracket",
							"modifiers":"shift"
						}
					]
				},
				{
					"type":"basic",
					"from": {
						"key_code": "x",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},
					"to":[
						{
							"key_code":"2",
							"modifiers":"shift"
						}
					]
				},
				{
					"type":"basic",
					"from": {
						"key_code": "c",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},
					"to":[
						{
							"key_code":"close_bracket",
							"modifiers":"shift"
						}
					]
				},
				{
					"type":"basic",
					"from": {
						"key_code": "comma",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},
					"to":[
						{
							"key_code":"backslash",
							"modifiers":"shift"
						}
					]
				},
				{
					"type":"basic",
					"from":{
						"key_code":"period",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},					
					"to":[
						{
							"key_code":"quote"						
						}
					]
				},
				{
					"type":"basic",
					"from": {
						"key_code": "slash",
						"modifiers":{
							"mandatory":["right_option","shift"],
							"optional":["caps_lock"]
						}
					},
					"to":[
						{
							"key_code":"international3",
							"modifiers":"shift"
						}
					]
				}
			]
    }
 ]
}
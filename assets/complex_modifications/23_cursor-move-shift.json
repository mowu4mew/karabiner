{
  "title":"23/24.cursor move shift",
  "rules":[
    {
      "description": "cursor move j / l / k / i / d / h with shift",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"left_arrow",
              "modifiers":"shift"
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"right_arrow",
              "modifiers":"shift"
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"up_arrow",
              "modifiers":"shift"
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"down_arrow",
              "modifiers":"shift"
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"delete_or_backspace",
              "modifiers":"shift"
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers":{
              "mandatory":["right_control"]
            }
          },
          "to": [
            { 
              "key_code":"delete_or_backspace",
              "modifiers":[
                "fn",
                "shift"
              ]
            }
          ],
          "conditions": [
            { 
              "type": "variable_if",
              "name": "cursor_move",
              "value": 1 }
          ]
        }
      ]
    }
  ]
}

{
  "title":"31.keyswap",
  "rules":[
    {
      "description":"31/34.keyswap (semicolon/j+k/d+f to hyphen/tab/esc",
      "manipulators":[
        {
					"type": "basic",
					"from": {
            "key_code": "semicolon",
						"modifiers":{
							"optional": [
							]
						}
    			},
    			"to":[
						{"key_code": "hyphen"}
					]
				},
        {
          "type":"basic",
          "from":{
            "key_code":"semicolon",
            "modifiers":{
              "optional":
              [
								"shift",
								"caps_lock"               
							]
            }
          },
          "to":[
            {"key_code":"international1"}
          ]
        },
        {
          "type":"basic",
          "from": {
            "simultaneous": [
              { "key_code": "j" },
              { "key_code": "k" }
            ],
            "modifiers":{
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"tab"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"comma",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["any"]
            }
          },
          "to":[
            {
              "key_code":"tab"
            }
          ]
        },
        {
          "type":"basic",
          "from": {
            "simultaneous": [
              { "key_code": "d" },
              { "key_code": "f" }
            ],
            "modifiers":{
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"escape"
            }
          ]
        }
      ]
    }
  ]
} 
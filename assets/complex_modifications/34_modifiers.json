{
  "title":"34.modifiers",
  "rules":[
    {
      "description": "34/34.modifiers ( eisu/kana/space/v/m/a to R_Control/R_Option/shift/option)",
      "manipulators": [
        { 
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy":true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code":"japanese_eisuu",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone":[
            {
              "key_code":"spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_option",
              "lazy":true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone": [
            {"key_code": "return_or_enter"}
          ]
        },
        {
          "type":"basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_control"
              ],
              "optional": [
                "shift",
                "caps_lock",
                "option"
              ]
            }
          },
          "to": [
              {
                  "key_code": "fn"
              }
          ]
        }
      ]
    }
  ]
}
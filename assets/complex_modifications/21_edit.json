          ]
        },
       {
          "type":"basic",
          "from": {
              "key_code": "period",
              "modifiers": {
                  "mandatory": [
                      "right_control"
                  ],
                  "optional": [
                      "caps_lock"
                  ]
              }
          },
          "to": [
              {
                  "key_code": "left_arrow",
                  "modifiers": [
                      "command"
                  ]
              },
              {
                  "key_code": "return_or_enter"
              },
              {
                  "key_code": "up_arrow"
              }
          ]
        }
      ]
    }
  ]

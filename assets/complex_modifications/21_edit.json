              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"x",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"c",
            "modifiers":{
              "mandatory" :["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"c",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from" :{
            "key_code":"v",
            "modifiers":{
              "mandatory":["right_control"],
              "optional":["caps_lock"]
            }
          },
          "to":[
            {
              "key_code":"v",
              "modifiers":["command"]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"a",
            "modifiers":{

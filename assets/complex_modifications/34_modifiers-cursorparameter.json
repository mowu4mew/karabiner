{
  "title":"34.modifiers-cursorparam",
  "rules":[
    {
      "description": "34/34.modifiers-cursorparam( eisu/kana/space/v/m/a to R_Control/R_Option/param 1/param 2/param 3)",
      "manipulators": [
        { 
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "shift",
              "lazy":true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code":"japanese_eisuu",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone":[
            {
              "key_code":"spacebar"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_option",
              "lazy":true
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone": [
            {"key_code": "return_or_enter"}
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers":{
              "mandatory":"right_control"
            }
          },
          "to": [
            { 
              "set_variable": {
                 "name": "cursor_move",
                  "value": 1,
                  "key_up_value":0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code":"v",
              "modifiers":"command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "cursor_move",
              "value": 0 
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers":{
              "mandatory":"right_control"
            }
          },
          "to": [
            { 
              "set_variable": {
                 "name": "cursor_move",
                  "value": 2,
                  "key_up_value":0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code":"a",
              "modifiers":"command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "cursor_move",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers":{
              "mandatory":"right_control"
            }
          },
          "to": [
            { 
              "set_variable": {
                 "name": "cursor_move",
                  "value": 3,
                  "key_up_value":0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code":"fn"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "cursor_move",
              "value": 0
            }
          ]
        }
      ]
    }
  ]
}